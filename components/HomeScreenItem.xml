<?xml version="1.0" encoding="utf-8" ?>

<component name="HomeScreenItem" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/HomeScreenItem.brs"/>

    <interface>
        <field id="itemContent" type="node"  onChange="ChangedContent"/>
    </interface>

    <children>
        <Poster id="poster" loadDisplayMode="scaleToFit"/>
        <Rectangle id="rectUnwatched" color="0x000000FF" opacity="0.5" visible="false"/>
        <Rectangle id="rectWatched"   color="0xFFA500FF" opacity="0.5" visible="false"/>
    </children>
</component>
